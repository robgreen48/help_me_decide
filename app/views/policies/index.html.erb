<p id="notice"><%= notice %></p>

<h1>Listing Policies</h1>

<table>
  <thead>
    <tr>
      <th>Party</th>
      <th>Issue area</th>
      <th>Policy Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @policies.each do |policy| %>
      <tr>
        <td><%= policy.party_id %></td>
        <td><%= policy.issue_area %></td>
        <td><%= policy.policy_text %></td>
        <td><%= link_to 'Show', policy %></td>
        <td><%= link_to 'Edit', edit_policy_path(policy) %></td>
        <td><%= link_to 'Destroy', policy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

